# Google Gemini API設定
GEMINI_API_KEY=your_api_key_here

# データベース設定
DATABASE_URL=sqlite:///receipts.db

# OCR設定
TESSERACT_PATH=/usr/bin/tesseract  # Dockerコンテナ内のTesseractパス
TESSERACT_LANG=jpn  # 日本語モデル

# アプリケーション設定
DEBUG=false
UPLOAD_FOLDER=./uploads  # アップロードされたファイルの保存先
MAX_CONTENT_LENGTH=16777216  # 最大アップロードサイズ (16MB)

# セキュリティ設定
SECRET_KEY=your_secret_key_here  # セッション暗号化用キー
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg  # 許可するファイル拡張子

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=app.log
